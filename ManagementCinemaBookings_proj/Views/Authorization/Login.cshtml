@model ManagementCinemaBookings.ViewModels.CinemaEmployeeVM

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-xs-10 col-xs-pull-2 col-xs-offset-5">
        <h2 class="login_title">PRIJAVA KINO ZAPOSLENIKA</h2>
        <br />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeEmailAddress, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.EmployeeEmailAddress, new { htmlAttributes = new { @class = "form-control", @style = "border:2px solid #5C423E;border-radius:5px;color:#5C423E;" } })
                @Html.ValidationMessageFor(model => model.EmployeeEmailAddress, "", new { @style = "color:#ED371F;" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmployeePassword, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.EmployeePassword, new { htmlAttributes = new { @class = "form-control", @style = "border:2px solid #5C423E;border-radius:5px;color:#5C423E;" } })
                @Html.ValidationMessageFor(model => model.EmployeePassword, "", new { @style = "color:#ED371F;" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-10 col-xs-push-3">
                <input style="border:3px solid #FFF;" class="btn btn-lg btn-primary" type="submit" value="Prijavi" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}