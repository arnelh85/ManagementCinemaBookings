@model IEnumerable<ManagementCinemaBookings.ViewModels.CinemaEmployeeVM>

@{
    ViewBag.Title = "Index";
}

<div>
    <h2 class="cinEmployee_title">LISTA KINO ZAPOSLENIKA</h2>
    <br />
    <br />
    @Html.ActionLink("Dodaj", "Create", "CinemaEmployees", routeValues: new { controller = "CinemaEmployees", action = "Create" }, htmlAttributes: new { @class = "btn btn-md btn-success" })
</div>

<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeGender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeePhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeEmailAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeEmailAddress)
            </td>
            <td>
                @Html.ActionLink("Promijeni", "Edit", "CinemaEmployees", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-md btn-warning" })
                @Html.ActionLink("Ukloni", "Delete", "CinemaEmployees", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-md btn-danger" })
            </td>
        </tr>
    }
</table>