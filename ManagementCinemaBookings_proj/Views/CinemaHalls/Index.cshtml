@model IEnumerable<ManagementCinemaBookings.ViewModels.CinemaHallVM>

@{
    ViewBag.Title = "Index";
}

<div>
    <h2>LISTA KINO DVORANA</h2>
    <br />
    <br />
    @Html.ActionLink("Dodaj", "Create", "CinemaHalls", routeValues: new { controller = "CinemaHalls", action = "Create" }, htmlAttributes: new { @class = "btn btn-md btn-success" })
</div>

<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CinemaCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CinemaAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CinemaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatCapacity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatCapacity)
            </td>
            <td>
                @Html.ActionLink("Promijeni", "Edit", "CinemaHalls", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-md btn-warning" })               
            </td>
        </tr>
    }
</table>