@model IEnumerable<ManagementCinemaBookings.ViewModels.CinemaScreeningVM>

@{
    ViewBag.Title = "Index";
}

<div>
    <h2>LISTA KINO PROJEKCIJA</h2>
    <br />
    <br />
    @Html.ActionLink("Dodaj", "Create", "CinemaScreenings", routeValues: new { controller = "CinemaScreenings", action = "Create" }, htmlAttributes: new { @class = "btn btn-md btn-success" })
</div>

<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScreeningStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScreeningEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoldSeats)
        </th>                
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScreeningStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScreeningEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldSeats)
            </td>                
            <td>
                @Html.ActionLink("Promijeni", "Edit", "CinemaScreenings", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-md btn-warning" })
            </td>
        </tr>
    }
</table>