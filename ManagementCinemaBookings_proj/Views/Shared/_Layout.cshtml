<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Session["log_email"] != null && Session["IsAdmin"] != null)
                        {
                            <li class="logged_cinEmployee"><p>PRIJAVLJENI KORISNIK: @Session["cinemaEmployeeFullName"]</p></li> 
                            <li>@Html.ActionLink("KINO DVORANE", "Index", "CinemaHalls", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("KINO FILMOVI", "Index", "CinemaMovies", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("KINO PROJEKCIJE", "Index", "CinemaScreenings", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("KINO ZAPOSLENICI", "Index", "CinemaEmployees", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("KINO ULAZNICE", "Index", "CinemaTicketBookings", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("ODJAVA", "Logout", "Authorization", null, new { @style = "color:#ED371F;" })</li>
                        }
                        else if (Session["log_email"] != null && Session["IsUser"] != null)
                        {
                            <li class="logged_cinEmployee"><p>PRIJAVLJENI KORISNIK: @Session["cinemaEmployeeFullName"]</p></li>
                            <li>@Html.ActionLink("KINO DVORANE", "Index", "CinemaHalls", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("KINO FILMOVI", "Index", "CinemaMovies", null, new { @style = "color:#FAF0E6;" })</li>
                            <li>@Html.ActionLink("KINO PROJEKCIJE", "Index", "CinemaScreenings", null, new { @style = "color:#FAF0E6;" })</li>                            
                            <li>@Html.ActionLink("KINO ULAZNICE", "Index", "CinemaTicketBookings", null, new { @style = "color:#FAF0E6;" })</li> 
                            <li>@Html.ActionLink("ODJAVA", "Logout", "Authorization", null, new { @style = "color:#ED371F;" })</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="pag_footer">
            <p>Copyright &copy; @DateTime.Now.Year UPRAVLJANJE KINO REZERVACIJAMA - HODŽIĆ ARNEL</p>          
        </div>
        <div class="container body-content">
            @RenderBody()       
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body> 
</html>